<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00cafa"
    tools:context=".Splash.activities.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Добро пожаловать!"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_main_googlesignin"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_google_radius"
        android:backgroundTint="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="51dp"
        android:text="Продолжить с помощью Google"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_main_googlesignin"
        app:layout_constraintStart_toStartOf="@+id/text_main_googlesignin"
        app:layout_constraintTop_toTopOf="@+id/text_main_googlesignin"
        app:srcCompat="@drawable/gaagle" />

    <Button
        android:id="@+id/btn_main_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="MainContent"
        app:layout_constraintEnd_toEndOf="@+id/text_main_googlesignin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_main_googlesignin"
        app:layout_constraintTop_toBottomOf="@+id/text_main_googlesignin" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/job3"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>