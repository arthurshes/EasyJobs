<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00cafa"
    tools:context=".Splash.activities.ChooseActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="176dp"
        android:layout_height="66dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Регистрация соискателя"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edPersonName"
        android:layout_width="240dp"
        android:layout_height="62dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="ФИО"
        android:inputType="textPersonName"
        android:textColor="#605B5B"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/edPersonAge"
        android:layout_width="241dp"
        android:layout_height="69dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Возраст"
        android:inputType="textPersonName"
        android:textColor="#605B5B"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/edPersonName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edPersonName"
        app:layout_constraintTop_toBottomOf="@+id/edPersonName" />

    <EditText
        android:id="@+id/edPersonCity"
        android:layout_width="243dp"
        android:layout_height="62dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Город"
        android:inputType="textPersonName"
        android:textColor="#605B5B"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/edPersonAge"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edPersonAge"
        app:layout_constraintTop_toBottomOf="@+id/edPersonAge" />

    <Button
        android:id="@+id/button_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/reg"
        android:text="зарегистрироваться"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/edPersonCity"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="@+id/edPersonCity"
        app:layout_constraintTop_toBottomOf="@+id/edPersonCity" />

    <Button
        android:id="@+id/button_Employer"
        android:layout_width="159dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/reg"
        android:text="соискатель"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Worker"
        android:layout_width="159dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/reg"
        android:text="работодатель"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="176dp"
        android:layout_height="66dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Регистрация работодателя"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edPersonName2"
        android:layout_width="240dp"
        android:layout_height="62dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="ФИО"
        android:inputType="textPersonName"
        android:textColor="#605B5B"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edPersonAge2"
        app:layout_constraintStart_toStartOf="@+id/edPersonAge2"
        app:layout_constraintTop_toBottomOf="@+id/edPersonAge2" />

    <EditText
        android:id="@+id/edPersonAge2"
        android:layout_width="241dp"
        android:layout_height="69dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Название организации"
        android:inputType="textPersonName"
        android:textColor="#605B5B"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/edPersonCity2"
        android:layout_width="243dp"
        android:layout_height="62dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Город"
        android:inputType="textPersonName"
        android:textColor="#605B5B"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edPersonName2"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="@+id/edPersonName2"
        app:layout_constraintTop_toBottomOf="@+id/edPersonName2" />

    <Button
        android:id="@+id/button_reg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/reg"
        android:text="зарегистрироваться"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edPersonCity2"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/edPersonCity2"
        app:layout_constraintTop_toBottomOf="@+id/edPersonCity2" />

</androidx.constraintlayout.widget.ConstraintLayout>